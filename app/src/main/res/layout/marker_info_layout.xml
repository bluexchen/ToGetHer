<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- http://javatechig.com/android/how-to-apply-shadow-effect-on-android-textview -->
    <TextView
        android:id="@+id/tv_event_name_at_marker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shadowColor="#8A2BE2"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:textColor="#FBFBFB"
        android:textSize="28dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_event_date_at_marker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="5dp" />
    <TextView
        android:id="@+id/tv_event_time_at_marker_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="5dp" />

</LinearLayout>